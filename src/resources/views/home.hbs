<div class='my-4'>
	<div class='row'>

		{{#each courses}}
			<div class='col-sm-6 col-lg-4'>
				<div class='card my-2'>
					<a href='/courses/{{this.slug}}'>
						<img
							class='card-img-top'
							src='{{this.image}}'
							alt='{{this.name}}'
						/>
					</a>
					<div class='card-body'>
						<a
							class='card-title-link'
							href='/courses/{{this.slug}}'
						>
							<h5 class='card-title'>{{this.name}}</h5>
						</a>
						<p
							class='card-text card-description'
						>{{this.description}}</p>
						<a
							href='/courses/{{this.slug}}'
							class='btn btn-primary'
						>Đăng ký</a>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
</div>